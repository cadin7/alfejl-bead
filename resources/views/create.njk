{% extends "parent.njk" %}

{% block content %}
<div class="row">
  <ul>
    {% for error in old('errors') %}
      <li>{{ error.message }}</li>
    {% endfor %}
  </ul>
  
  
  
  
  <form class="form-horizontal" method="POST">
    {{ csrfField }}
    <fieldset>
      <legend>Új hírdetés feladása</legend>
      <input type="text" id="inputPoster" name="poster" value="{{ currentUser.username }}" hidden/>
      <div>
        <label for="category_id" class="col-lg-2 control-label">Régió</label>
        <div class="col-lg-10">
          <select class="form-control" id="inputRegion" name="category_id">
            {% for category in categories %}
            <option value="{{ category.id }}">{{ category.name }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="fromm" class="col-lg-2 control-label">Honnan</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputFromm" name="fromm" value="{{ old('fromm') }}" placeholder="Honnan" required>
        </div>
      </div>
      <div class="form-group">
        <label for="to" class="col-lg-2 control-label">Hova</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputTo" name="to" value="{{ old('to') }}" placeholder="Hova" required>
        </div>
      </div>
      <div class="form-group">
        <label for="when" class="col-lg-2 control-label">Indulás dátuma</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputWhen" name="when" value="{{ old('when') }}" required placeholder="Mikor">
        </div>
      </div>
      <div class="form-group">
        <label for="price" class="col-lg-2 control-label">Ár</label>
        <div class="col-lg-10">
          <input type="number" class="form-control" id="inputPrice" name="price" value="{{ old('price') }}" required placeholder="Ár"> 
        </div>
      </div>
      <div class="form-group">
        <label for="seats" class="col-lg-2 control-label">Szabad ülések</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputSeats" name="seats" value="{{ old('seats') }}" required placeholder="Szabad ülések">
        </div>
      </div>
      <div class="form-group">
        <label for="contact" class="col-lg-2 control-label">Kapcsolat</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputContact" name="contact" value="{{ currentUser.email }}" required placeholder="Kapcsolat">
        </div>
      </div>
      <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Létrehoz</button>
      </div>
    </div>
    </fieldset>
  </form>
  </form>
</div>
{% endblock %}