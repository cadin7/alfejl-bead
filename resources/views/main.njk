{% extends "parent.njk" %} {% block content %}
<h3>Legfrissebb hírdetések</h3>
<div class="row">
	{% for telekocsi in telekocsis %}
	<div class="col-md-4 col-sm-6 col-xs-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<a href="/telekocsi/{{ telekocsi.id }}">
        {{ telekocsi.fromm }} -> {{ telekocsi.to }}</a> {% if currentUser.username !== telekocsi.poster %} {{ csrfField | safe }}
				<a href="/telekocsi/{{ telekocsi.id }}" class="btn btn-primary pull-right btn-xs">Lefoglalom</a>
				{% endif %}
			</div>
			<ul class="list-group">
				<li class="list-group-item">
					Indulás dátuma: {{ telekocsi.when }}<br>Ár: {{ telekocsi.price }}<br>Szabad ülések: {{ telekocsi.seats }}<br>Hirdető:
					{{ telekocsi.poster }}
				</li>
			</ul>
		</div>
	</div>

	{% endfor %}

</div>
{% endblock %}

